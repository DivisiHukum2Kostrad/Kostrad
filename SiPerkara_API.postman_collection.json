                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"nama_dokumen\": \"Surat Keputusan Updated\",\n  \"jenis_dokumen\": \"SK\",\n  \"kategori_dokumen\": \"Surat Keputusan\",\n  \"keterangan\": \"Updated description\"\n}"
                        },
